            android:layout_margin="@dimen/small_margin"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/_2009_2010_licence_de_biologie_toulon"/>

        <View
            android:id="@+id/separator3"
            android:layout_width="match_parent"
